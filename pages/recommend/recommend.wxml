<!-- 标签页 -->
<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">推荐图书</view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">已支付</view>  
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">已取消</view>  
    <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">已完成</view>  
    <view class="swiper-tab-list {{currentTab==4 ? 'on' : ''}}" data-current="4" bindtap="swichNav">待评价</view>  
    <view class="swiper-tab-list {{currentTab==5 ? 'on' : ''}}" data-current="5" bindtap="swichNav">已评价</view>  
  </view>
 
<view  class="tab-content">
    <!-- 收入 -->
    <view class="tab-list-content {{currentTab==0?'active':''}}">
        <view class="book">
            <view class="bookimg">
                <image src="{{inList.book_img}}" mode="aspectFit"hidden="{{isHidenIntro}}"></image>
            </view>
            <view class="bName" hidden="{{isHidenIntro}}">书名</view>
            <view class="bNameInfo" hidden="{{isHidenIntro}}">{{inList.book_name}}</view>
            <view class="intro" hidden="{{isHidenIntro}}">{{author}}</view>
            <view class="author" hidden="{{isHidenIntro}}">{{inList.author_name}}</view>
        </view>
        <view class="bookInfo">
        <view hidden="{{isHidenIntro}}" class="introduction">图书简介</view>
        <view hidden="{{isHidenIntro}}" class="introMessage">{{inList.introduction}}</view>
        </view>
        <view class="function">
        <button bindtap="goToPage" type="primary" hidden="{{isHidenIntro}}" size="mini">添加到任务</button>
        </view>
        <view hidden="{{isHidenLoadMore}}">
            <loading type="circle">加载中</loading>
        </view>
        <view hidden="{{isHidenInfo}}">
            <text>{{info}}</text>
        </view>
    </view>
    <!-- 支出 -->
    <view class="tab-list-content {{currentTab==1?'active':''}}">
        <view class="book">
            <view class="bookimg">
                <image src="{{inList.book_img}}"></image>
            </view>
            <view class="author">{{inList.author_name}}</view>
        </view>
        <view hidden="{{isHidenLoadMore}}">
            <loading type="circle">加载中</loading>
        </view>
    </view>
    <!-- 已取消 -->
    <view class="tab-list-content {{currentTab==2?'active':''}}">
        <text>{{info}}</text>
    </view>
</view>